      img src="http://lorempixel.com/300/400/" tour-step="another-image"

  script id="angular/tour.html" type="text/ng-template"
    div[
      ng-style="$pos"
      ng-if="$show"
      class="tour_-highlight"
      ui-tooltip=""
      reposition="$content"
      position-my="$data.positionMy"
      position-at="$data.positionAt"
    ]
      h4 ng-if="$data.title" style="color: red"
        | {{ $data.title }}
      p
        | {{ $content }}
      button ng-if="$hasPrevious()" ng-click="$previous()" Prev
      button ng-if="$hasNext()" ng-click="$next()" Next
      button ng-if="$isLastStep()" ng-click="$end()" End tour
      small.right
        | {{ $data.positionMy }}

  div tour-template="" src="angular/tour.html"

  script src="bower_components/jquery/dist/jquery.js"
  script src="bower_components/qtip2/jquery.qtip.js"
